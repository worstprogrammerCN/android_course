<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.shoppinglist.product_detail">
    <RelativeLayout
        android:id="@+id/image_panel"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_weight="0.3"
        android:background="@color/grey">
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/devondale"/>
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/imagePanel_leftPart_leftMargin"
            android:layout_marginTop="@dimen/imagePanel_leftPart_TopMargin"
            android:src="@drawable/back"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Devondable"
            android:textColor="@color/blackText"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/imagePanel_leftPart_leftMargin"
            android:layout_marginBottom="@dimen/imagePanel_leftPart_BottomMargin"/>
        <ImageView
            android:id="@+id/star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/imagePanel_RightPart_RightMargin"
            android:layout_marginBottom="@dimen/imagePanel_RightPart_BottomMargin"
            android:src="@drawable/empty_star"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:id="@+id/detail"
        app:layout_constraintTop_toBottomOf="@+id/image_panel"
        tools:layout_editor_absoluteX="0dp">
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥152.29"
            android:textColor="@color/blackText"
            android:textSize="@dimen/detailText"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/priceMargin"
            android:layout_marginLeft="@dimen/priceMargin"/>
        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重量"
            android:textColor="@color/grey"
            android:textSize="@dimen/detailText"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/typeMargin"
            android:layout_marginBottom="@dimen/typeMargin"/>
        <TextView
            android:id="@+id/information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300g"
            android:textColor="@color/grey"
            android:textSize="@dimen/detailText"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/type"
            android:layout_marginBottom="@dimen/informationMarginBottom"
            android:layout_marginLeft="@dimen/informationMarginLeft"/>
        <ImageButton
            android:id="@+id/shop_button"
            android:layout_width="@dimen/shopButtonSide"
            android:layout_height="@dimen/shopButtonSide"
            android:scaleType="fitCenter"

            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/shopButtonMarginRight"

            android:background="@drawable/left_line"
            android:src="@drawable/shoplist"/>
        <View
            android:layout_width="1dip"
            android:layout_height="@dimen/shopButtonSide"
            android:background="@color/greyLine"
            android:layout_gravity="center_horizontal"

            android:layout_toLeftOf="@id/shop_button"
            android:layout_centerVertical="true"

            android:layout_marginRight="15dp"
            />
    </RelativeLayout>

    <View
        android:layout_height="1dp"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/greyLine"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@+id/detail"/>

    <RelativeLayout
        android:id="@+id/more_information"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blackText"
            android:textSize="@dimen/detailItemText"
            android:text="更多产品信息"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>

    <View
        android:id="@+id/thickLine"
        android:layout_height="20dp"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/greyLine"
        app:layout_constraintTop_toBottomOf="@+id/more_information"/>
    <ListView
        android:id="@+id/operationListView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/thickLine">

    </ListView>

</android.support.constraint.ConstraintLayout>
